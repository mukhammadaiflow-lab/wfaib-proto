generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    Int    @id @default(autoincrement())
  email String @unique

  workflows Workflow[]
}

model Workflow {
  id        Int      @id @default(autoincrement())
  name      String
  ownerId   Int
  owner     User     @relation(fields: [ownerId], references: [id])
  createdAt DateTime @default(now())
  json      Json

  runs      Run[]
}

model Run {
  id         Int      @id @default(autoincrement())
  workflowId Int
  workflow   Workflow @relation(fields: [workflowId], references: [id])
  status     String
  input      Json?
  result     Json?
  createdAt  DateTime @default(now())

  logs       RunLog[]

  @@index([workflowId])
}

model RunLog {
  id       Int @id @default(autoincrement())
  runId    Int
  run      Run @relation(fields: [runId], references: [id])
  nodeId   String
  nodeType String
  level    String @default("info")
  message  String?
  output   Json?
  createdAt DateTime @default(now())

  @@index([runId])
}
